                                </ul>
                            </div>
                            <!-- Mobile Menu -->
                            <div class="col-12">
                                <div class="mobile_menu d-block d-lg-none"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Header End -->
    </header>
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <span>Mời nhập phản hồi từ bạn</span>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>

                </div>
                <form>
                    <div class="modal-body">
                        @*<textarea class="form-control" rows="4" name="noidung-phanhoi"></textarea>*@
                        <input type="text" class="form-control" name="noidung-phanhoi" value="" id="noidung-phanhoi">
                    </div>
                </form>

                <div class="modal-footer">
                    <button class="btn btn-primary" data-dismiss="" id="btn-guiphanhoi">Gửi phản hồi</button>
                </div>
            </div>

        </div>
    </div>


    @RenderBody()

