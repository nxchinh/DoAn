<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Nhân Viên</title>
    <link rel="shortcut icon" type="image/x-icon" href="~/assets/nguoidung/img/logo/logo_gongcha.png">
    <link href="~/assets/admin/css/style.css" rel="stylesheet" />
    <link href="~/assets/nhanvien/style.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Dancing+Script|Itim|Lobster|Montserrat:500|Noto+Serif|Nunito|Patrick+Hand|Roboto+Mono:100,100i,300,300i,400,400i,500,500i,700,700i|Roboto+Slab|Saira" rel="stylesheet">
    <!-- Jquery -->
    <link href="~/assets/nguoidung/css/style.css" rel="stylesheet" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/font-awesome@4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
    <style>
        body {
            font-family: 'Noto Serif', serif;
            line-height: 1.5;
            font-weight: 400;
            font-size: 16px;
        }
        .header-left .dropdown .dropdown-menu {
            width: 200px;
            font-family: 'Itim', cursive;
            font-weight: 500;
            line-height: 1.2;
            color: inherit;
        }
        .header-nhanvien {
            background-color: #EFEFEF;
        }
        .header-nhanvien-border {
            margin-left: 105px;
            margin-right: 105px;
            padding: 10px 0;
            margin-bottom: 20px;
            border-bottom: 1px solid #3989c6;
        }
        .tenchinhanh-nv span {
            color: black;
        }
        .ml-title, .mr-title {
            padding: 10px 20px;
            font-size: 1.2em;
            border-bottom: 1px solid black;
        }
        .tongtien {
            text-align: right;
            padding: 15px;
            color: #3989c6;
            font-size: 1.4em;
            border-top: 1px solid #3989c6;
            border-bottom: 1px solid black;
        }
        .ct-hoadon {
            padding: 10px;
            padding-bottom: 20px;
            font-size: 1.2em;
        }
        .ml-title span, .mr-title span {
            color: #000;
            font-size: 1.6em;
        }
        .ct-hoadon .soluong input {
            width: 20%;
        }
        .hoadon-nhanvien-border {
            margin-left: 80px;
            margin-right: 80px;
            padding: 10px 0;
            margin-top: 20px;
            border-bottom: 1px solid #aaa;
        }
        .header-left .dropdown .dropdown-menu .dropdown-item {
            font-size: 15px;
        }
        .user-area .user-menu .nav-link {
            font-size: 15px;
        }

    </style>
</head>

<body>
    <div class="header-nhanvien">
        <div class="container">
            <header id="header" class="header row">
                <div class="top-left col-md-2">
                    <a  class="navbar-brand" href="/HomeNhanVien/index"><img style="max-height: 70px; max-width: 60px; margin: 10px 0;" src="~/assets/nguoidung/img/logo/logo_gongcha.png" alt="Logo"></a>
                </div>
                @await Component.InvokeAsync("TenChiNhanh")
                <div class="top-right col-md-8">
                    <div class="header-menu">
                        <div class="header-left">

                            @await Component.InvokeAsync("TongHoaDon")
                        </div>

                        <div class="user-area dropdown float-right">
                            @await Component.InvokeAsync("TenDangNhapNhanVien")
                        </div>

                    </div>
                </div>
            </header>
        </div>
    </div>
    <div class="header-nhanvien-border"></div>

    @RenderBody()
    @RenderSection("locsanpham", required: false)
</body>
</html>