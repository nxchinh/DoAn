@model IEnumerable<DoAn.Models.Model.Admin.SanPhamModel>
<div class="table-sanphambanchay">
    <div class="card">
        <div class="card-header">
            <strong class="card-title">Sản phẩm bán chạy</strong>
        </div>
        <div class="card-body">
            <table class="table table-striped table-bordered" width="100%">
                <thead>
                <tr>
                    <th width="20%">Ảnh</th>
                    <th width="55%">Tên</th>
                    <th width="25%">Số lượng</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="20%"><img src="@Url.Content("~/images/"+item.Anh)" alt="Alternate Text" width="60" /></td>
                        <td width="55%">@item.Ten</td>
                        <td width="25%" class="table-center">@item.TongSL</td>

                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>