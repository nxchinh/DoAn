@model DoAn.Models.Model.Admin.SanPhamModel

@{
    ViewData["Title"] = "AddOrEdit";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<div class="container">
    <div class="danhsachsanpham">
        <div class="modal-content" style="padding: 8px;">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">Sửa sản phẩm</h4>
            </div>
            <form asp-action="Update" asp-controller="SanPhamAdmin" enctype="multipart/form-data" method="post">
                <div class="modal-body">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    @Html.Hidden("id", "", new { @class = "hiddenid" })
                    <input type="text" class="form-control" class="hiddenid" placeholder="" style="display: none;" />
                    <div class="form-group row">
                        <label asp-for="Ten" class="col-md-3">Tên sản phẩm</label>
                        <input asp-for="Ten" type="text" class="form-control col-md-8" id="tensanphamadminupdate" placeholder="tên sản phẩm" />
                        <div class="col-md-1"><span asp-validation-for="Ten" class="text-danger"></span></div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="MaLoai" class="col-md-3">Loại sản phẩm</label>
                        @Html.DropDownList("MaLoai", null, htmlAttributes: new { @class = "form-control col-md-8" })
                        <div class="col-md-1"><span asp-validation-for="MaLoai" class="text-danger"></span></div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="GiaBan" class="col-md-3">Giá bán</label>
                        <input asp-for="GiaBan" type="text" class="form-control col-md-8" id="giabansanphamadminupdate" placeholder="giá bán" />
                        <div class="col-md-1"></div>
                    </div>
                    <input type="hidden" name="HINH" id="HINH" value="@Model.Anh" />
                    @*<div class="form-group row">
                            <label asp-for="MoTa" class="col-md-3">Mô tả</label>
                            <textarea asp-for="MoTa" type="text" rows="4" class="form-control col-md-8" id="motasanphamadminupdate" placeholder="Mô tả"></textarea>
                            <div class="col-md-1"></div>
                        </div>*@
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary" data-dismiss="modal" id="btnUpdate">Update</button>
                </div>
            </form>
        </div>
    </div>
</div>


