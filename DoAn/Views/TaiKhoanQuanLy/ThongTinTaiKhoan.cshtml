
@{
    ViewBag.Title = "ThongTinTaiKhoan";
    Layout = "~/Views/Shared/QuanLy.cshtml";
}
@model DoAn.Models.Model.NhanVien.NhanVienModel
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <br />
        <h4>Thông tin tài khoản nhân viên</h4>

        @using (Html.BeginForm())
        {


            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @if (ViewBag.Success != null)
                {
                    <div class="alert alert-success">@ViewBag.Success</div>
                }
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)


                <div class="form-group row">
                    @Html.LabelFor(model => model.HoTen, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.HoTen, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(model => model.SDT, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
                    </div>
                </div>



                <div class="form-group row">
                    @Html.LabelFor(model => model.DiaChi, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                    </div>
                </div>



                <div class="form-group row">
                    @Html.LabelFor(model => model.TenDangNhap, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        <input type="text" name="name" value="@Model.TenDangNhap" disabled class="form-control" />
                        @Html.ValidationMessageFor(model => model.TenDangNhap, "", new { @class = "text-danger" })
                    </div>
                </div>




                <div class="form-group row">
                    @Html.LabelFor(model => model.TenChucVu, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        <input type="text" name="name" value="@Model.TenChucVu" disabled class="form-control" />
                        @Html.ValidationMessageFor(model => model.TenChucVu, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(model => model.TenChiNhanh, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        <input type="text" name="name" value="@Model.TenChiNhanh" disabled class="form-control" />
                        @Html.ValidationMessageFor(model => model.TenChiNhanh, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(model => model.Luong, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        <input type="text" name="name" value="@String.Format("{0:0,0}",@Model.Luong)đ" disabled class="form-control" />
                        @Html.ValidationMessageFor(model => model.Luong, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-md-5"></div>
                        <div class="col-md-2"><input type="submit" value="Lưu" class="btn btn-primary" /></div>
                        <div class="col-md-5"></div>
                    </div>

                </div>
            </div>
        }

    </div>
    <div class="col-md-2">
        <br />
        <a href="/HomeQuanLy/Index" class="btn btn-primary">Quay lại</a>
    </div>
</div>


