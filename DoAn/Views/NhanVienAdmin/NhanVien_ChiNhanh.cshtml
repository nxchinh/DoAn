
@{
    ViewBag.Title = "NhanVien_ChiNhanh";
    Layout = "~/Views/Shared/Admin.cshtml";
    var @chinhanh = (DoAn.Models.EF.ChiNhanh)ViewBag.ChiNhanh;
}
@model List<DoAn.Models.Model.Admin.NhanVienModel>

<div class="container">
    <div class="danhsachsanpham">
        
            <div class="row">
                <div class="col-xl-5 col-md-5">
                    <h5>Tên chi nhánh: @chinhanh.TenChiNhanh</h5>
                   
                </div>
                <div class="col-xl-5 col-md-5">
                    <h5>Địa chỉ: @chinhanh.DiaChi</h5>
                    
                </div>
                
            </div>
       
        <hr />
        <div class="content">
            <div class="animated fadeIn">
                <div class="row">

                    <div class="col-md-12">
                        
                            
                            <h4>Bảng lương</h4>
                            <div class="card-body">
                                <table id="bootstrap-data-table" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th width="5%">STT</th>
                                            <th width="15%">Họ tên</th>
                                            <th width="19%">Tên đăng nhập</th>
                                            <th width="10%">SĐT</th>
                                            <th width="10%">Chi nhánh</th>
                                            <th width="10%">Chức vụ</th>
                                            <th width="10%">Lương</th>


                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td width="5%" class="table-center">@item.STT</td>
                                                <td width="15%" class="admin-spc-tensp"><span>@item.HoTen</span> </td>
                                                <td width="19%" class="table-center">@item.TenDangNhap</td>
                                                <td width="15%" class="table-center">@item.SDT</td>
                                                <td width="15%">@item.TenChiNhanh</td>
                                                <td width="15%">@item.TenChucVu</td>
                                                <td width="10%" class="table-center">@String.Format("{0:0,0}", @item.Luong)đ </td>
                                            </tr>
                                        }

                                    </tbody>
                                </table>
                            </div>
                       
                    </div>


                </div>
            </div><!-- .animated -->
        </div>

    </div>
</div>








