
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/Admin.cshtml";
}
@model DoAn.Models.Model.Admin.HoaDonBanModel
<div class="container">
    <div class="danhsachsanpham">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="myModalLabel">Phê duyệt hóa đơn</h4>
                </div>
                <form asp-action="Update" method="post">
                <div class="modal-body">
                    <input type="text" class="form-control" id="idhoadonbanadmin" placeholder="" style="display:none;" />
                        <div class="form-group row">
                            <label for="NoiDung" class="col-md-3">Tên khách hàng</label>
                            <input asp-for="TenDangNhap" type="text" class="form-control col-md-8" id="tenkhachhang" disabled />
                            <div class="col-md-1"></div>
                        </div>

                        <div class="form-group row">
                            <label for="NoiDung" class="col-md-3">Email</label>
                            <input asp-for="Email" type="text" class="form-control col-md-8" id="emailkhachhang" disabled />
                            <div class="col-md-1"></div>
                        </div>

                        <div class="form-group row">
                            <label for="NoiDung" class="col-md-3">Địa chỉ</label>
                            <input asp-for="DiaChi" type="text" class="form-control col-md-8" id="diachikhachhang" disabled />
                            <div class="col-md-1"></div>
                        </div>

                        <div class="form-group row">
                            <label for="NoiDung" class="col-md-3">Số điện thoại</label>
                            <input asp-for="SDT" type="text" class="form-control col-md-8" id="sdtkhachhang" disabled />
                            <div class="col-md-1"></div>
                        </div>

                        <div class="form-group row">
                            <label for="NoiDung" class="col-md-3">Tổng tiền</label>
                            <input asp-for="TongTienShow" type="text" class="form-control col-md-8" id="tongtienhoadon" disabled />
                            <div class="col-md-1"></div>
                        </div>

                        <div class="form-group row">
                            <label for="Age" class="col-md-3">Chi nhanhs</label>
                            @Html.DropDownListFor(model => model.MaChiNhanh, ViewBag.ChiNhanh as SelectList, "--------Chọn chi nhánh----------", htmlAttributes: new { @class = "form-control col-md-8" })
                            <div class="col-md-1"></div>
                        </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Update</button>
                </div>
                    </form>
            </div>
        </div>
    </div>
</div>


